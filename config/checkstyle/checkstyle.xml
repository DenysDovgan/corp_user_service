<?xml version="1.0"?>
<!DOCTYPE module PUBLIC "-//Puppy Crawl//DTD Check Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <module name="TreeWalker">
        <!-- Определение правила длины строки -->
        <module name="LineLength">
            <property name="max" value="120"/>
            <property name="ignorePattern" value="^package"/>
        </module>

        <!-- Проверка отступов (4 пробела) -->
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
            <property name="braceAdjustment" value="0"/>
            <property name="caseIndent" value="4"/>
            <property name="tabWidth" value="4"/>
        </module>

        <!-- Проверка именования классов (с заглавной буквы) -->
        <module name="TypeName"/>

        <!-- Проверка именования методов (camelCase) -->
        <module name="MethodName"/>

        <!-- Проверка пустых блоков -->
        <module name="EmptyBlock">
            <property name="option" value="text"/>
        </module>

        <!-- Проверка импорта (без неиспользуемых) -->
        <module name="UnusedImports"/>
    </module>
</module>
